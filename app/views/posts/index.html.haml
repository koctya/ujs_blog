%h1 Listing posts
.row
  .panel
    %table.table
      %thead
        %tr
          %th Name
          %th Title
          %th Content
          %th
          %th
          %th

      %tbody
        - @posts.each do |post|
          %tr
            %td= post.name
            %td= post.title
            %td= post.content
            %td= link_to 'Show', post
            %td= link_to 'Edit', edit_post_path(post)
            %td= link_to 'Destroy', post, :method => :delete, :remote => true, :class=>'delete_post', :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Post', new_post_path
